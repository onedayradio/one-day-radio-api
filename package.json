{
  "name": "one-day-radio-api",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:onedayradio/one-day-radio-api.git",
  "author": "One Day Radio Org",
  "license": "MIT",
  "scripts": {
    "start": "yarn format && yarn lint && cross-env NODE_ENV=local sls offline start",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "update-all": "yarn upgrade-interactive --latest",
    "deploy-dev": "sls deploy --stage dev",
    "deploy-prod": "sls deploy --stage prod",
    "test": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --exit -p tsconfig.json tests/**/*.spec.ts",
    "test:watch": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --watch --extension ts -p tsconfig.json tests/**/*.spec.ts",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary yarn test",
    "preload-neo4j": "ts-node-dev ./scripts/neo4j-loader.ts",
    "preload-neo4j-watch": "ts-node-dev --respawn ./scripts/neo4j-loader.ts",
    "webscrapper": "ts-node-dev ./scripts/scrapper.ts",
    "webscrapper-watch": "ts-node-dev --respawn ./scripts/scrapper.ts",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format && yarn lint"
    }
  },
  "dependencies": {
    "apollo-server-lambda": "2.23.0",
    "aws-lambda": "1.0.6",
    "bcryptjs": "2.4.3",
    "bunyan": "1.8.15",
    "bunyan-console-stream": "0.1.0",
    "crypto": "1.0.1",
    "dataloader": "2.0.0",
    "diacritic": "0.0.2",
    "graphql": "15.5.0",
    "graphql-tools": "7.0.4",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "moment": "^2.29.1",
    "neo4j-driver": "4.2.3",
    "node-base64-image": "2.0.3",
    "querystring": "0.2.1",
    "request": "2.88.2",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.75",
    "@types/bcryptjs": "2.4.2",
    "@types/bunyan": "1.8.6",
    "@types/chai": "4.2.16",
    "@types/chai-subset": "1.3.3",
    "@types/faker": "5.5.2",
    "@types/jsonwebtoken": "8.5.1",
    "@types/lodash": "4.14.168",
    "@types/mocha": "8.2.2",
    "@types/nodemailer": "6.4.1",
    "@types/request": "2.48.5",
    "@types/sinon": "10.0.0",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "@typescript-eslint/typescript-estree": "4.22.0",
    "chai": "4.3.4",
    "chai-subset": "1.6.0",
    "cross-env": "7.0.3",
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-prettier": "3.4.0",
    "faker": "5.5.3",
    "fs": "0.0.1-security",
    "husky": "6.0.0",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "scrape-it": "5.3.1",
    "serverless": "2.35.0",
    "serverless-offline": "6.9.0",
    "serverless-offline-ssm": "5.2.0",
    "serverless-plugin-typescript": "1.1.9",
    "sinon": "10.0.0",
    "ts-mocha": "8.0.0",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  }
}
