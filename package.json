{
  "name": "one-day-radio-api",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:onedayradio/one-day-radio-api.git",
  "author": "One Day Radio Org",
  "license": "MIT",
  "scripts": {
    "start": "yarn format && yarn lint && cross-env NODE_ENV=local sls offline start",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "update-all": "yarn upgrade-interactive --latest",
    "deploy-dev": "sls deploy --stage dev",
    "deploy-prod": "sls deploy --stage prod",
    "test": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --exit -p tsconfig.json tests/**/*.spec.ts",
    "test:watch": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --watch --extension ts -p tsconfig.json tests/**/*.spec.ts",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary yarn test"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format && yarn lint"
    }
  },
  "dependencies": {
    "apollo-server-lambda": "2.14.1",
    "aws-lambda": "1.0.6",
    "bcryptjs": "2.4.3",
    "bunyan": "1.8.12",
    "bunyan-console-stream": "0.1.0",
    "crypto": "1.0.1",
    "dataloader": "2.0.0",
    "diacritic": "0.0.2",
    "graphql": "15.0.0",
    "graphql-tools": "6.0.5",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "mailgun-js": "0.22.0",
    "mongo-cursor-pagination": "7.3.0",
    "mongoose": "5.9.16",
    "querystring": "0.2.0",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.51",
    "@types/bcryptjs": "2.4.2",
    "@types/bunyan": "1.8.6",
    "@types/chai": "4.2.11",
    "@types/chai-subset": "1.3.3",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.154",
    "@types/mailgun-js": "0.22.7",
    "@types/mocha": "7.0.2",
    "@types/mongoose": "5.7.21",
    "@types/nodemailer": "6.4.0",
    "@types/request": "2.48.5",
    "@types/sinon": "9.0.4",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "@typescript-eslint/typescript-estree": "3.0.2",
    "chai": "4.2.0",
    "chai-subset": "1.6.0",
    "cross-env": "7.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "mocha": "7.2.0",
    "node-mongodb-fixtures": "3.2.4",
    "nyc": "15.0.1",
    "prettier": "2.0.5",
    "serverless-offline": "6.3.0",
    "serverless-offline-ssm": "5.0.1",
    "serverless-plugin-typescript": "1.1.9",
    "sinon": "9.0.2",
    "ts-mocha": "7.0.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.3"
  }
}
