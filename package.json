{
  "name": "one-day-radio-api",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:onedayradio/one-day-radio-api.git",
  "author": "One Day Radio Org",
  "license": "MIT",
  "scripts": {
    "start": "yarn format && yarn lint && cross-env NODE_ENV=local sls offline start",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "update-all": "yarn upgrade-interactive --latest",
    "deploy-dev": "sls deploy --stage dev",
    "deploy-prod": "sls deploy --stage prod",
    "test": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --exit -p tsconfig.json tests/**/*.spec.ts",
    "test:watch": "cross-env NODE_ENV=test ts-mocha --paths --timeout 20000 --recursive --watch --extension ts -p tsconfig.json tests/**/*.spec.ts",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary yarn test"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format && yarn lint"
    }
  },
  "dependencies": {
    "apollo-server-lambda": "2.19.0",
    "aws-lambda": "1.0.6",
    "bcryptjs": "2.4.3",
    "bunyan": "1.8.14",
    "bunyan-console-stream": "0.1.0",
    "crypto": "1.0.1",
    "dataloader": "2.0.0",
    "diacritic": "0.0.2",
    "graphql": "15.4.0",
    "graphql-tools": "7.0.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "moment": "^2.29.1",
    "mongo-cursor-pagination": "7.3.1",
    "mongoose": "5.10.15",
    "neo4j-driver": "4.2.1",
    "node-base64-image": "2.0.1",
    "querystring": "0.2.0",
    "request": "2.88.2",
    "yup": "0.31.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.64",
    "@types/bcryptjs": "2.4.2",
    "@types/bunyan": "1.8.6",
    "@types/chai": "4.2.14",
    "@types/chai-subset": "1.3.3",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.165",
    "@types/mocha": "8.0.4",
    "@types/mongodb": "^3.5.34",
    "@types/mongoose": "5.10.1",
    "@types/nodemailer": "6.4.0",
    "@types/request": "2.48.5",
    "@types/sinon": "9.0.9",
    "@types/yup": "0.29.9",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "@typescript-eslint/typescript-estree": "4.8.2",
    "chai": "4.2.0",
    "chai-subset": "1.6.0",
    "cross-env": "7.0.2",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "mocha": "8.2.1",
    "node-mongodb-fixtures": "3.2.7",
    "nyc": "15.1.0",
    "prettier": "2.2.0",
    "serverless": "2.12.0",
    "serverless-offline": "6.8.0",
    "serverless-offline-ssm": "5.2.0",
    "serverless-plugin-typescript": "1.1.9",
    "sinon": "9.2.1",
    "ts-mocha": "8.0.0",
    "ts-node": "9.0.0",
    "typescript": "4.1.2"
  }
}
